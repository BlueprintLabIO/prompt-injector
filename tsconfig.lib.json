{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./core",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": [
    "core/**/*.ts"
  ],
  "exclude": [
    "core/**/*.test.ts",
    "core/**/*.spec.ts"
  ]
}