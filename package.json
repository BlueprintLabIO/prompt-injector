{
	"name": "@blueprintlabio/prompt-injector",
	"version": "1.0.0",
	"description": "Lightweight TypeScript library for AI security testing with 25+ curated prompt injection patterns from leading security research",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run build:lib",
		"build:lib": "rm -rf dist && tsc --project tsconfig.lib.json && cp src/lib/package.json dist/",
		"build:demo": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo '' && npm run build:lib",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"prepublishOnly": "npm run build:lib"
	},
	"keywords": [
		"ai-security",
		"prompt-injection",
		"llm-security",
		"ai-testing",
		"security-testing",
		"penetration-testing",
		"red-teaming",
		"typescript",
		"jailbreaking",
		"ai-safety"
	],
	"author": "Blueprint Lab IO",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/BlueprintLabIO/prompt-injector.git"
	},
	"homepage": "https://github.com/BlueprintLabIO/prompt-injector",
	"bugs": {
		"url": "https://github.com/BlueprintLabIO/prompt-injector/issues"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	},
	"publishConfig": {
		"access": "public"
	}
}
